$bg_color = #f5f5f5
$base_font = 'Open Sans', sans-serif
$base_color = #ff3c41
$base_dark = #4c4646
$header_image = 'http://callfiles.ueibo.com/hexo-theme-laughing/page_background.jpg'
$label_urgent_color = #ff3c41
$label_other_color = #3772FD
$label_normal_color = #37EAA0
border-radius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments
*
    margin 0
    padding 0
html, body
    min-height 100%
    height 100%
body
    background $bg_color
    font-family $base_font
    font-size 14px
.clearfix
    overflow auto
    zoom 1
.container
    height 100%
    display flex
    justify-content center
    align-items center
    flex-flow row wrap
.todo-wrapper
    background #fff
    width 350px
    box-shadow 0 0 40px rgba(0,0,0, .1)
    border-radius(6px)
.todo-header
    border-radius(6px)
    background url($header_image) no-repeat
    background-size cover
    padding 50px 20px
    position relative
    .overlay
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background rgba(0,0,0, .2)
      border-radius(6px)
    time
      color #fff
      display block
      position relative
      .day
        font-size 4em
        float left
        margin-right 10px
      .dayofweek
        display block
        margin-top 13px
        font-size 1.4em
        font-weight 700
    .add-circle
      position absolute
      background $base_color
      color white
      border-radius(50%)
      width 40px
      height 40px
      line-height 40px
      text-align center
      right 20px
      bottom -20px
      box-shadow 0 0 13px rgb(255,60,65)
      cursor pointer

.todo-content
    .todo-content-title
        padding 20px
        h2
            font-size 1.5em
            font-weight normal
            color $base_dark
        .task-report
            font-size .9em
            color #afafaf
            margin-top 5px
    .todo-list
        list-style none
        .todo-item
            padding 15px 20px
            border-top: 1px solid #f1f1f1
            position: relative
            &.task-done
                .text
                    color #ccc
            .text
                margin-top -2px
                padding-left 26px
                padding-right 35px
            .action-popup
                display none
            .label
                display inline-block
                background: $base_color
                width 15px
                height 15px
                border-radius 50%
                float left
                margin-right 10px
                position relative
                cursor pointer
                &.normal
                    background $label_normal_color
                &.other
                    background $label_other_color
                &.important
                    background $label_urgent_color

        
